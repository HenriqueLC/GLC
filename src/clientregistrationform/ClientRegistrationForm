    // Endereço (6)
    GridPane addressPane = new GridPane();
    addressPane.setHgap(10);
    addressPane.setVgap(10);
    addressPane.setPadding(new Insets(10, 10, 10, 10));
    addressPane.setAlignment(Pos.CENTER);
    Text streetNumber = new Text();
    streetNumber.setText("Rua Porto Alegre, 51");
    streetNumber.setFont(Font.font("Arial", 12));
    addressPane.add(streetNumber, 0, 0);
    Text districtCityState = new Text();
    districtCityState.setText("Jacaré, Cabreúva - SP");
    districtCityState.setFont(Font.font("Arial", 12));
    addressPane.add(districtCityState, 0, 1);
    Text zipCode = new Text();
    zipCode.setText("CEP: 13318-000");
    zipCode.setFont(Font.font("Arial", 12));
    addressPane.add(zipCode, 0, 2);
    // Tab pane
    TabPane tabPane = new TabPane();
    tabPane.setMinSize(TabPane.USE_PREF_SIZE, TabPane.USE_PREF_SIZE);
    tabPane.setMaxSize(TabPane.USE_PREF_SIZE, TabPane.USE_PREF_SIZE);
    tabPane.getStyleClass().add(TabPane.STYLE_CLASS_FLOATING);
    tabPane.setSide(Side.TOP);
    // Address tab
    Tab addressTab = new Tab();
    addressTab.setText("Endereço");
    addressTab.setContent(addressPane);
    tabPane.getTabs().add(addressTab);
    gridPane.add(tabPane, 0, 4);